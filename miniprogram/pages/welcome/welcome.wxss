page {
  width: 100%;
  min-height: 100%;
  background: #fff;
  box-sizing: border-box;
}
.main{
  padding-top: 200rpx;
}
.head-box{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0px auto;
  /* box-shadow: 0px 0px 10px 5px rgba(236,162,56,0.2); */
}
.headIcon{
  width: 100%;
  height: 100%;
}
.tips-box{
  padding-top: 60rpx;
  padding-bottom: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  line-height: 1.8;
}
.tips-blod{
  font-weight: bold;
  color: #333;
}
.btn-box{
  padding: 0px 80rpx;
}
button.auth-btn{
 color: #fff;
 background:linear-gradient(to right,#397be6,#4c79dc);
 border-radius: 10rpx;
 line-height: 2.4;
 font-size: 32rpx;
}
