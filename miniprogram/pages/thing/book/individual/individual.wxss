@import "../../../../style/common.wxss";

page{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}
.main{
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.group{
  width: 90%;
  height: 100rpx;  
  background: #fff;
  display: flex;
  flex-direction: grow;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
}
.btn-group{
  width: 90%;
  height: 100rpx;  
  background: #fff;
  display: flex;
  flex-direction: grow;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #f6f6f6; 
}
.input{
  width: 200rpx;
  height: 90%;
  border-bottom: 1rpx solid #e6e6e6;
  /* padding: 5rpx; */
  border-radius: 4rpx;
  /* display: flex; */
  /* flex-direction: row-reverse; */
}