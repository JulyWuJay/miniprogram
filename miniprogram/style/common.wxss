/* 顶部搜索框 无法输入字符 */
.header-search{
  width:100%;
  height: 8%;
  /* background-color: #515151; */
  border-bottom: 1rpx solid rgba(0, 0 , 0 , 0.1);
  border-top: 1rpx solid rgba(0, 0 , 0 , 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-search-circle{
  width: 90%;
  height: 70%;
  background-color: #dbdbdb;
  /* opacity: 0.1; */
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.header-search-circle-text{
  color: #515151;
}
.header-search-circle-icon{
  width: 48rpx;
  height: 48rpx;
}
/* 侧边选择栏 */

/* 默认的Input */
.normal-input{
  border-bottom: 1rpx solid #e6e6e6;
  padding: 5rpx;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row-reverse;
}

/* 按钮 */
.btn-primary{
  background-color: rgb(0, 112, 173)
}
.btn-warning{
  background-color: rgb(255, 48, 76)
}
/* flex-center */
.flex-center{
  display: flex;
  justify-content: center;
  align-items: center;
}